# =============================================================================
# STR CERTIFIED STAGING ENVIRONMENT CONFIGURATION
# =============================================================================

# CRITICAL: This is the STAGING environment configuration
# Never use production secrets or data in staging

# -----------------------------------------------------------------------------
# ENVIRONMENT IDENTIFICATION [REQUIRED]
# -----------------------------------------------------------------------------
NODE_ENV=staging
VITE_APP_ENV=staging
VITE_LOG_LEVEL=debug

# -----------------------------------------------------------------------------
# STAGING SUPABASE CONFIGURATION [REQUIRED - UPDATE WITH STAGING PROJECT]
# -----------------------------------------------------------------------------
# TODO: Replace with actual staging Supabase project URLs
VITE_SUPABASE_URL=https://your-staging-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_staging_supabase_anon_key

# -----------------------------------------------------------------------------
# AI SERVICES CONFIGURATION [SHARED - WITH RATE LIMITING]
# -----------------------------------------------------------------------------
# Note: Using same OpenAI key but with usage monitoring for staging
VITE_OPENAI_API_KEY=sk-your-openai-api-key

# -----------------------------------------------------------------------------
# GOOGLE SERVICES CONFIGURATION [SHARED]
# -----------------------------------------------------------------------------
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# -----------------------------------------------------------------------------
# STAGING DOMAIN CONFIGURATION [STAGING-SPECIFIC]
# -----------------------------------------------------------------------------
VITE_PUBLIC_URL=https://staging.doublecheckverified.com
VITE_INSPECTOR_DOMAIN=app-staging.doublecheckverified.com
VITE_ADMIN_DOMAIN=admin-staging.doublecheckverified.com
VITE_API_URL=https://api-staging.doublecheckverified.com

# -----------------------------------------------------------------------------
# FEATURE FLAGS [STAGING SETTINGS - MORE PERMISSIVE FOR TESTING]
# -----------------------------------------------------------------------------
VITE_ENABLE_DOMAIN_ROUTING=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_PWA=true
VITE_ENABLE_AI_FEATURES=true
VITE_ENABLE_VIDEO_RECORDING=true
VITE_ENABLE_OFFLINE_MODE=true

# -----------------------------------------------------------------------------
# DEBUGGING & DEVELOPMENT [STAGING ENABLED]
# -----------------------------------------------------------------------------
VITE_ENABLE_DEBUG_PANEL=true
VITE_ENABLE_CONSOLE_LOGS=true
VITE_ENABLE_SOURCEMAPS=true
VITE_BUNDLE_ANALYZER=false

# -----------------------------------------------------------------------------
# MONITORING & ALERTING [STAGING-SPECIFIC]
# -----------------------------------------------------------------------------
# TODO: Set up staging-specific Sentry project
VITE_SENTRY_DSN=https://your-staging-sentry-dsn@sentry.io/staging-project-id
VITE_APP_VERSION=staging-latest

# -----------------------------------------------------------------------------
# RAILWAY DEPLOYMENT VARIABLES [AUTO-POPULATED BY RAILWAY]
# -----------------------------------------------------------------------------
PORT=${PORT}
RAILWAY_PUBLIC_DOMAIN=${RAILWAY_PUBLIC_DOMAIN}
RAILWAY_ENVIRONMENT=staging

# -----------------------------------------------------------------------------
# ALERT CONFIGURATION [STAGING CHANNELS]
# -----------------------------------------------------------------------------
# TODO: Set up staging-specific webhook
ALERT_WEBHOOK_URL=https://hooks.slack.com/services/your/staging/webhook

# -----------------------------------------------------------------------------
# SECURITY CONFIGURATION [RELAXED FOR TESTING]
# -----------------------------------------------------------------------------
VITE_ENABLE_SECURITY_HEADERS=true
VITE_ENABLE_CSP=true
VITE_ENABLE_HTTPS_REDIRECT=false

# -----------------------------------------------------------------------------
# PERFORMANCE CONFIGURATION [STAGING OPTIMIZED]
# -----------------------------------------------------------------------------
VITE_ENABLE_COMPRESSION=true
VITE_ENABLE_CACHING=false
VITE_PERFORMANCE_BUDGET_KB=2048

# -----------------------------------------------------------------------------
# STAGING-SPECIFIC SETTINGS
# -----------------------------------------------------------------------------
VITE_STAGING_MODE=true
VITE_TEST_DATA_ENABLED=true
VITE_MOCK_EXTERNAL_APIS=false
VITE_AI_RATE_LIMIT_REQUESTS_PER_MINUTE=30
VITE_STAGING_DATA_RETENTION_DAYS=30

# -----------------------------------------------------------------------------
# DATABASE CONFIGURATION
# -----------------------------------------------------------------------------
VITE_ENABLE_DATABASE_LOGGING=true
VITE_DATABASE_POOL_SIZE=5
VITE_DATABASE_TIMEOUT_MS=10000

# -----------------------------------------------------------------------------
# AI CONFIGURATION [STAGING LIMITS]
# -----------------------------------------------------------------------------
VITE_AI_MAX_REQUESTS_PER_HOUR=100
VITE_AI_MAX_EMBEDDING_CALLS_PER_DAY=1000
VITE_AI_ENABLE_CACHING=true
VITE_AI_CACHE_TTL_HOURS=24

# -----------------------------------------------------------------------------
# MEDIA & STORAGE [STAGING LIMITS]
# -----------------------------------------------------------------------------
VITE_MAX_PHOTO_SIZE_MB=5
VITE_MAX_VIDEO_SIZE_MB=50
VITE_MEDIA_STORAGE_BUCKET=str-certified-staging-media
VITE_ENABLE_MEDIA_COMPRESSION=true

# -----------------------------------------------------------------------------
# TESTING CONFIGURATION
# -----------------------------------------------------------------------------
VITE_E2E_BASE_URL=https://staging.doublecheckverified.com
VITE_TEST_USER_EMAIL=test@staging.doublecheckverified.com
VITE_TEST_ADMIN_EMAIL=admin@staging.doublecheckverified.com
VITE_ENABLE_TEST_ROUTES=true